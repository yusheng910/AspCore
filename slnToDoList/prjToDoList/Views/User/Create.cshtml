@model prjToDoList.Models.tUser

@{
    ViewData["Title"] = "Create";
}

@section Styles{
    <style>
        .form-group {
            margin-top: 10px;
        }
    </style>
}

<h1>Create Account Here</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="fEmail" class="control-label">E-mail Address</label>
                <input name="fEmail" type="email" class="form-control" required />
                <span asp-validation-for="fEmail" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="fUserName" class="control-label">User Name</label>
                <input name="fUserName" class="form-control" required />
                <span asp-validation-for="fUserName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="fPassword" class="control-label">Password</label>
                <input type="password" name="fPassword" class="form-control" required />
                <span asp-validation-for="fPassword" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="fMobile" class="control-label">Mobile</label>
                <input name="fMobile" class="form-control"/>
                <span asp-validation-for="fMobile" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-controller="Home" asp-action="Login">Back to Login</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
